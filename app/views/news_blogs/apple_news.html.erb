 <section class="container1">   
    <div class="news-container">
        <% @articles_apple.each do |article| %>
            <ul>
                <li>
                    <img src=<%=article["urlToImage"] %> alt="" width="500" height="300">
                </li>
                <li>
                    <%=article["publishedAt"] %>
                </li>
                <li>
                    <a href=<%=article["url"] %> class = "title"><%=article["title"]%></a>
                </li>
                <li class="description">
                    <%= article["description"] %>
                </li>
            </ul>
        <% end%>
    </div>
    <div class="popular-news-container">
    <h1 >Popular News</h1>
        <% @articles_popular.each do |article| %>
            <ul>
                <li>
                    <img src=<%=article["urlToImage"] %> alt="" width="250" height="150">
                </li>
                <li>
                    <%=article["publishedAt"] %>
                </li>
                <li>
                    <a href=<%=article["url"] %> class = "title"><%=article["title"]%></a>
                </li>
            </ul>
        <% end%>
    </div>
</section>